@model RentACar.Models.ViewModels.CarViewModel

<h2>Voertuig</h2>
    <h4>Nieuwe auto</h4>
    <hr />
    <form id="addCarForm" method="post" asp-action="AddCar" asp-controller="Car">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label class="col-md-2" asp-for="Kenteken"></label>
            <div class="col-md-10">
                <input asp-for="Kenteken" class="form-control" />
                <span asp-validation-for="Kenteken" class="text-danger"></span>
                <span asp-validation-for="Kenteken" class="text-warning"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2" asp-for="Merk"></label>
            <div class="col-md-10">
                <input asp-for="Merk" class="form-control" />
                <span asp-validation-for="Merk" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2" asp-for="Type"></label>
            <div class="col-md-10">
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2" asp-for="Dagprijs"></label>
            <div class="col-md-10">
                <input asp-for="Dagprijs" class="form-control" />
                <span asp-validation-for="Dagprijs" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 offset-md-2">
                <input type="submit" value="Toevoegen" class="btn btn-success" />
            </div>
        </div>
    </form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
